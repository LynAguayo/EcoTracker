<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<!-- Contenidor principal -->
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ecotracker.controller.MenuInicialController"
      style="-fx-background-color: white;">

    <!-- Contenidor vertical centrat amb espai i padding -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30;" HBox.hgrow="ALWAYS">
        <!-- Logo -->
        <ImageView fitWidth="200" fitHeight="200" preserveRatio="true">
            <Image url="@img/logo.png"/>
        </ImageView>

        <!-- Títol i subtítol -->
        <Text style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #0c8006;" text="EcoTracker"/>
        <Text style="-fx-font-size: 18px; -fx-fill: #096505;" text="Seguiment d'Impacte Ambiental"/>

        <!-- Botons amb les opcions -->
        <VBox spacing="15" alignment="CENTER" maxWidth="400">
            <Button text="Registrar activitat sostenible"
                    onAction="#handleRegistrarActivitat"
                    style="-fx-background-color: #0c8006; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 300px; -fx-min-height: 50px; -fx-background-radius: 5;"/>

            <Button text="Visualitzar activitats registrades"
                    onAction="#handleVisualitzarActivitats"
                    style="-fx-background-color: #0c8006; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 300px; -fx-min-height: 50px; -fx-background-radius: 5;"/>

            <Button text="Visualitzar gràfica amb total de CO2"
                    onAction="#handleVisualitzarGrafica"
                    style="-fx-background-color: #0c8006; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 300px; -fx-min-height: 50px; -fx-background-radius: 5;"/>
        </VBox>
    </VBox>

    <!-- Imatge a la dreta -->
    <ImageView fitWidth="600" fitHeight="600" preserveRatio="true">
        <Image url="@img/fondo.png"/>
    </ImageView>

</HBox>
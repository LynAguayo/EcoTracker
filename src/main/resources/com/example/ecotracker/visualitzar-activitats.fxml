<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<!-- Contenidor principal -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ecotracker.controller.VisualitzarActivitatsController"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <!-- Marges per separar el contingut de les vores -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Barra superior amb botó per tornar i títol -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Tornar" onAction="#handleBack" style="-fx-background-color: #0c8006; -fx-text-fill: white;"/>
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Visualitzar Activitats Registrades"/>
    </HBox>

    <!-- Secció amb la informació total de CO2 i botó per exportar a CSV -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Total CO2 estalviat:" style="-fx-font-size: 16px;"/>
        <Text fx:id="totalCo2Text" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Exportar a CSV" onAction="#handleExportCSV" style="-fx-background-color: #0c8006; -fx-text-fill: white;"/>
    </HBox>

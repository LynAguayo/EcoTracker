<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<!-- Contenidor principal -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ecotracker.controller.VisualitzarActivitatsController"
      spacing="20"
      stylesheets="@css/styles.css">

    <!-- Marges per separar el contingut de les vores -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Barra superior amb botó per tornar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Tornar" onAction="#handleBack"/>
        <Text styleClass="title-text" text="Visualitzar Activitats Registrades"/>
    </HBox>

    <!-- Secció amb la informació total de CO2 i botó per exportar a CSV -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="total-co2-section">
        <Label text="Total CO2 estalviat:" styleClass="total-co2-label"/>
        <Text fx:id="totalCo2Text" styleClass="total-co2-value"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Exportar a CSV" onAction="#handleExportCSV"/>
    </HBox>

    <!-- Taula per mostrar la llista d'activitats registrades -->
    <TableView fx:id="activitiesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="dateColumn" text="Data" prefWidth="100"/>
            <TableColumn fx:id="categoryColumn" text="Categoria" prefWidth="120"/>
            <TableColumn fx:id="descriptionColumn" text="Descripció" prefWidth="200"/>
            <TableColumn fx:id="co2Column" text="CO2 estalviat (kg)" prefWidth="120"/>
            <TableColumn fx:id="actionsColumn" text="Accions" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
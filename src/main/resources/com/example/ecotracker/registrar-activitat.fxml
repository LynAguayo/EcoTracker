<?xml version="1.0" encoding="UTF-8"?>

<!-- Importa els components de JavaFX que s'utilitzen -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<!-- Contenidor vertical principal de la pantalla -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ecotracker.controller.RegistrarActivitatController"
      spacing="20"
      stylesheets="@css/styles.css">

    <!--Marges interns del VBox-->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!--Capçalera amb botó de tornada i títol-->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Tornar" onAction="#handleBack"/>
        <Text styleClass="title-text" text="Registrar Activitat Sostenible"/>
    </HBox>

    <!--Formulari d'entrada dins un GridPane (disposició en taula)-->
    <GridPane vgap="15" hgap="10" styleClass="white-container">

        <!--Nom de l'activitat-->
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!--Data-->
        <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!--Categoria (Desplegable)-->
        <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!--Descripció-->
        <Label text="Descripció:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!--Valor de Co2 estalviat-->
        <Label text="Valor:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="valueField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <!--Botó per afegir l'activitat-->
    <Button text="Afegir Activitat"
            onAction="#handleAddActivity"
            styleClass="menu-button"
            alignment="CENTER"/>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<!-- Importa els components de JavaFX que s'utilitzen -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<!-- Contenidor vertical principal de la pantalla -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ecotracker.controller.RegistrarActivitatController"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <!--Marges interns del VBox-->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!--Capçalera amb botó de tornada i títol-->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Tornar" onAction="#handleBack" style="-fx-background-color: #0c8006; -fx-text-fill: white;"/>
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Registrar Activitat Sostenible"/>
    </HBox>
    
</VBox>